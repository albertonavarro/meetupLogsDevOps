<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    
    <property name="LOG_FILE" value="/home/alberto/meetup/Step6/meetup6.log" />
    <property name="LOG_PATTERN" value="%d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} [%thread] %level %logger{36} %X{requestId} - %msg%n" />
    
    <appender class="ch.qos.logback.core.FileAppender" name="json">
        <file>${LOG_FILE}</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
        </encoder>
    </appender>
    
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>
    
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="json" />
    </root>
</configuration>
